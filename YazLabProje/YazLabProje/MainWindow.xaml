<Window x:Class="projedeneme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projedeneme"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10"
            HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Content="1) Small CSV Yükle" Width="180" Height="40" Margin="0,0,10,0"
            Click="OnLoadSmallClick"/>
            <Button Content="2) Medium CSV Yükle" Width="180" Height="40"
            Click="OnLoadMediumClick"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10,60,10,10"
            HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Content="BFS (Start=1)" Width="140" Height="40" Margin="0,0,10,0"
            Click="OnBfsClick"/>
            <Button Content="DFS (Start=1)" Width="140" Height="40"
            Click="OnDfsClick"/>
        </StackPanel>


    </Grid>
</Window>
